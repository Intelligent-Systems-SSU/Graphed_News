// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // 환경변수에서 DB URL을 읽음
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  summary   String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("articles")
}

model Test {
  id      Int    @id @default(autoincrement())
  name    String
  content String

  @@map("tests")
}

model News {
  id          Int           @id @default(autoincrement())
  url         String
  title       String
  content     String
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  newsSummary NewsSummary?
  newsKeyword NewsKeyword[]
}

model NewsSummary {
  id      Int    @id @default(autoincrement())
  news    News   @relation(fields: [newsId], references: [id])
  newsId  Int    @unique
  summary String
}

model NewsKeyword {
  id          Int    @id @default(autoincrement())
  news        News   @relation(fields: [newsId], references: [id])
  newsId      Int   
  keyword     String
  description String
}

model ABTest {
  id             Int         @id @default(autoincrement())
  name           String
  problem1       String
  problem2       String
  problem3       String
  problem1Answer Int
  problem2Answer Int
  problem3Answer Int
  TestSolve      TestSolve[]
}

model TestSolve {
  id     Int    @id @default(autoincrement())
  test   ABTest @relation(fields: [testId], references: [id])
  testId Int
  name   String
  time   Float?
}
